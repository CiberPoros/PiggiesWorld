@{
    Layout = "/Layouts/_externalLayout.cshtml";

    bool isIncorrect = Request["incorrect"] == "true";
}

<link href="~/Content/auth.css" rel="stylesheet" />
<div class="box">
    <form action="~/Pages/AuthPages/LogInTemp.cshtml" onsubmit="return validateForm()" method="post">
        <h1>Вход</h1>
        @if (isIncorrect)
        {
            <p id="error-massage" class="text-danger">Неверно указан логин или пароль!</p>
        }
        <input id="login" type="text" placeholder="Имя пользователя" maxlength="15" name="login" required>
        <input id="pass" type="password" placeholder="Пароль" maxlength="15" name="password" required>
        <input id="submit" type="submit" value="Войти" name="sign-in">
    </form>
</div>
<script src="~/JS/validation.js"></script>

