@using PiggiesWorld.PL.Web.Models;
@using Ninject;
@using PiggiesWorld.BLL.Contracts;
@using PiggiesWorld.Common.Entities;

@{
    Layout = "/Layouts/_externalLayout.cshtml";

    var authManager = DependencesResolver.Resolver.Get<IAuthManager>();

    if (IsPost)
    {
        if (DateTime.TryParse(Request["birthDay"], out DateTime dateOfBirth))
        {
            var userName = Request["login"];

            if (authManager.RegisterUser(new User { LoginName = userName, BirthDay = dateOfBirth }, Request["password"]))
            {
                FormsAuthentication.SetAuthCookie(userName, createPersistentCookie: true);
                Response.Redirect("~");
            }
            else
            {
                // TODO: user already exists
                Response.Redirect("~/Pages/Registration.cshtml");
            }
        }
        else
        {
            // TODO: incorrect data format
            Response.Redirect("~/Pages/Registration.cshtml");
        }
    }
}

<link href="~/Content/auth.css" rel="stylesheet" />
<div>
    <form class="box" action="~/Pages/Registration.cshtml" method="post">
        <h1>Регистрация</h1>
        <input type="text" placeholder="Имя пользователя" maxlength="20" name="login" required>
        <input type="password" placeholder="Пароль" maxlength="20" name="password" required>
        <input type="date" placeholder="Дата рождения" name="birthDay" required>
        <input type="submit" value="Регистрация" name="registration">
    </form>
</div>
